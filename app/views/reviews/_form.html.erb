<%= simple_form_for([ cooker, review ],
                    url: cooker_reviews_path(@cooker),
                    data: {
                      insert_in_list_target: "form",
                      action: "submit->insert-in-list#send"
                    }) do |f| %>
  <%= f.input :rating, as: :select, collection: Review::AUTHORIZED_RATINGS, label: 'Avis' %>
  <%= f.input :content, as: :text, label: 'Commentaire', :input_html => {:rows => 5} %>
  <%= f.button :submit, "Partager", class: 'modal-content-button' %>
<% end %>
