<%= simple_form_for([ cooker, review ],
                    url: cooker_reviews_path(@cooker),
                    data: {
                      insert_in_list_target: "form",
                      action: "submit->insert-in-list#send"
                    }) do |f| %>
  <%= f.input :rating, as: :select, collection: [1, 2, 3, 4, 5], label: 'Note' %>
  <%= f.input :content, as: :text, label: 'Avis', :input_html => {:rows => 5} %>
  <%= f.button :submit, "Envoyer", class: 'modal-content-button' %>
<% end %>
