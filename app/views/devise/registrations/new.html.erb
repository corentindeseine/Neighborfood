<h2>Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                label: "Prénom",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name,
                label: "Nom",
                required: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :email,
                label: "Email",
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :phone_number,
                label: "Téléphone",
                required: true,
                input_html: { autocomplete: "phone_number" }%>
    <%= f.input :address,
                label: "Adresse",
                required: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :zip_code,
                label: "Code Postal",
                required: true,
                input_html: { autocomplete: "zip_code" }%>
    <%= f.input :city,
                required: true,
                label: "Ville",
                input_html: { autocomplete: "city" }%>
    <%= f.input :password,
                label: "Mot de Passe",
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirmation du mot de passe",
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
